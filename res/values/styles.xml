<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 默认字体样式 -->
    <style name="DefaultTextViewStyle">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="DefaultTextViewGrayStyle">
        <item name="android:textSize">@dimen/gameinfoText</item>
        <item name="android:textColor">@color/default_text_color_gray</item>
    </style>

    <style name="ListItemTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/file_name_color</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ListItemSubtitleStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/file_tip_text_color</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ListItemHideTextStyle">
        <item name="android:singleLine">true</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ListItemHeight">
        <item name="android:layout_height">70dp</item>
    </style>

    <style name="ListItemGroupStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/file_name_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>

    <style name="ListItemChildStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/file_name_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>

    <style name="DeleteButtonLayoutStyle">
        <item name="android:layout_height">58dp</item>
        <item name="android:background">#7fffffff</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DeleteButtonStyle">
        <item name="android:layout_height">42.5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/appuninstall_btn_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HeaderTitleTextStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/file_name_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HeaderTitleSelectedAllTextStyle">
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/file_tip_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ListItemHideTextDelStyle" parent="@style/ListItemHideTextStyle">
        <item name="android:textColor">@color/file_del_play_text_color</item>
    </style>

    <style name="ListItemHideTextDetailsStyle" parent="@style/ListItemHideTextStyle">
        <item name="android:textColor">@color/file_name_color</item>
    </style>

    <style name="ListItemHideTextOpenStyle" parent="@style/ListItemHideTextStyle">
        <item name="android:textColor">@color/file_open_text_color</item>
    </style>

    <style name="ListTitleTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/tab_indicator_text</item>
        <item name="android:background">@color/tab_indicator_text_bg2</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <!-- Dot -->
    <style name="Dot">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:src">@drawable/dot</item>
    </style>

    <style name="detail_classify_title_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/tab_selector</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="app_manage_text_style">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="smallRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_small_drawable</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
        <item name="android:isIndicator">false</item>
    </style>

    <style name="bigRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_large_drawable</item>
        <item name="android:minHeight">30dip</item>
        <item name="android:maxHeight">30dip</item>
        <item name="android:isIndicator">false</item>
    </style>

    <style name="feature_button">
        <item name="android:textSize">@dimen/feature_textSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="feature_icon">
        <item name="android:layout_width">15sp</item>
        <item name="android:layout_height">15sp</item>
    </style>

    <style name="progressBar_loading" parent="android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/game_loading</item>
        <item name="android:maxHeight">75dip</item>
        <item name="android:maxWidth">75dip</item>
        <item name="android:minWidth">75dip</item>
        <item name="android:minHeight">75dip</item>
    </style>

    <style name="small_progressBar_loading" parent="android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/small_loading</item>
        <item name="android:maxHeight">45dip</item>
        <item name="android:maxWidth">45dip</item>
        <item name="android:minWidth">45dip</item>
        <item name="android:minHeight">45dip</item>
    </style>

    <style name="youle_bg">
        <item name="android:background">@drawable/bg_000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_title_color</item>
    </style>

    <style name="text_style_shadow">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_textSize</item>
        <item name="android:shadowColor">#666666</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">0.5</item>
        <item name="android:shadowDy">-1</item>
    </style>

    <style name="youle_custom_dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 开关 -->
    <style name="ToggleBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:background">@drawable/toggle_button_selector</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
    </style>

    <!-- 侧边栏 -->
    <style name="TextView_Main_Drawer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mainmenu_selector</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="TextView2_Main_Drawer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="Dialog_Main_Drawer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#383838</item>
    </style>

    <style name="ProgessBar_Main_Drawer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:background">@drawable/jindutiao_bg</item>
        <item name="android:progressDrawable">@drawable/sdcard_progress_layer</item>
        <item name="android:max">100</item>
        <item name="android:maxHeight">15dip</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:indeterminate">false</item>
        <item name="android:indeterminateOnly">false</item>
    </style>

    <style name="Widget_ProgressBar_Small">
        <item name="android:indeterminateDrawable">@drawable/progress_horizontal1</item>
        <item name="android:minWidth">16dip</item>
        <item name="android:maxWidth">16dip</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="grid_view_style">
        <item name="android:verticalSpacing">10dip</item>
        <item name="android:horizontalSpacing">5dip</item>
        <item name="android:paddingLeft">7dip</item>
        <item name="android:paddingRight">7dip</item>
        <item name="android:paddingBottom">7dip</item>
    </style>

    <style name="grid_view_categories_style">
        <item name="android:paddingLeft">7dip</item>
        <item name="android:paddingRight">7dip</item>
        <item name="android:paddingBottom">7dip</item>
    </style>

    <style name="frame_menu_style">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/left_menu_text</item>
    </style>

    <style name="app_descri_text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/left_menu_text2</item>
    </style>

    <style name="app_descri_text2_style">
        <item name="android:textSize">@dimen/app_detail_size</item>
        <item name="android:textColor">@color/left_menu_text</item>
    </style>

    <style name="apk_manager_style">
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

</resources>