<?xml version="1.0" encoding="utf-8"?>
<com.zhidian.wifibox.view.SearchTopicView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:background="#FFeeeeee" />

    <LinearLayout
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/search_topic_img"
            android:layout_width="128dip"
            android:layout_height="45dip"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:id="@+id/view3"
            android:layout_width="wrap_content"
            android:layout_height="45dip"
            android:layout_marginLeft="10dip"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/search_topic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="我是专题列表里的数据"
                android:textColor="@color/black"
                android:textSize="15dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/search_topic_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="10款应用"
                android:textColor="#989898"
                android:textSize="@dimen/gameinfoText"
                android:textStyle="normal" >
            </TextView>
        </RelativeLayout>

        <TextView
            android:id="@+id/view4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="0"
            android:background="#FFBB36"
            android:gravity="center"
            android:paddingLeft="1.5dip"
            android:paddingRight="1.5dip"
            android:text="专题"
            android:textColor="@color/white"
            android:textSize="12dip" />
    </LinearLayout>

    <TextView
        android:id="@+id/search_topic_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="10dip"
        android:maxLines="2"
        android:text="画面太美，我不敢看，你敢看吗？反正我是不敢看的。画面太美，我不敢看，你敢看吗？"
        android:textColor="#808080"
        android:textSize="14sp" />

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="10dip"
        android:background="#FFeeeeee" />

</com.zhidian.wifibox.view.SearchTopicView>