<?xml version="1.0" encoding="utf-8"?>
<com.zhidian.wifibox.view.DownloadManagerContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ExpandableListView
        android:id="@+id/myExpandableListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:cacheColorHint="#00000000"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:listSelector="#00000000"
        android:scrollbars="none"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/no_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <Button
            android:id="@+id/jump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="看看小编推荐"
            android:textColor="#FF097c25"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:layout_marginTop="-46dp"
            android:scaleType="fitXY"
            android:src="@drawable/downloadmanager_nocontent_v2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="还没有下载任务!"
            android:textColor="#FF999999"
            android:textSize="14dp" />
    </LinearLayout>

</com.zhidian.wifibox.view.DownloadManagerContainer>