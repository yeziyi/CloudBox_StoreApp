<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/btn_classify_gren_selector"
        android:focusable="true"
        android:orientation="vertical"       
        android:padding="5.0dip" >

        <TextView
            android:id="@+id/item_categories_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="21dp"
            android:singleLine="true"
            android:text="高德地图"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold" >
        </TextView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/activity_layout_marginLeftRight"
            android:layout_marginRight="@dimen/activity_layout_marginLeftRight"
            android:layout_marginTop="@dimen/main_game_info_mar"
            android:background="#FFf1f1f1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="21dip" >

            <ImageView
                android:id="@+id/item_categories_image"
                android:layout_width="@dimen/game_iconSize"
                android:layout_height="@dimen/game_iconSize"
                android:layout_margin="5dip"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/item_categories_intro"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_layout_marginLeftRight"
                android:layout_marginRight="@dimen/activity_layout_marginLeftRight"
                android:lines="2"
                android:text="百度浏览器，百度安全管"
                android:textColor="#808080"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>