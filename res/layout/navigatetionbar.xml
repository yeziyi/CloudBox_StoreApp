<?xml version="1.0" encoding="utf-8"?>
<com.zhidian.wifibox.view.NavigationBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="47.5dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/common_model_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF363636"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/topic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/image"
                android:layout_width="32dp"
                android:layout_height="28dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2.5dp"
                android:src="@drawable/footer_grey_icon_01" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-1dp"
                android:text="@string/navigationtopic"
                android:textColor="#FFb2b2b2"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/app"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/image"
                android:layout_width="32dp"
                android:layout_height="28dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2.5dp"
                android:src="@drawable/footer_grey_icon_02" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-1dp"
                android:text="@string/navigationapp"
                android:textColor="#FFb2b2b2"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/feature"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/image"
                android:layout_width="32dp"
                android:layout_height="28dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2.5dp"
                android:src="@drawable/footer_grey_icon_03" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-1dp"
                android:text="首页"
                android:textColor="#FFb2b2b2"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/game"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/image"
                android:layout_width="32dp"
                android:layout_height="28dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2.5dp"
                android:src="@drawable/footer_grey_icon_04" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-1dp"
                android:text="@string/navigationgame"
                android:textColor="#FFb2b2b2"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/manage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/image"
                android:layout_width="32dp"
                android:layout_height="28dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2.5dp"
                android:src="@drawable/footer_grey_icon_05" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-1dp"
                android:text="@string/navigationmanage"
                android:textColor="#FFb2b2b2"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/index_top_point"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/text"
                android:layout_marginRight="-10dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/v2_red_point" />
        </RelativeLayout>
    </LinearLayout>

</com.zhidian.wifibox.view.NavigationBar>